<% include ../header %>        

<!-- ========================= SECTION PAGETOP ========================= -->
<section class="section-pagetop bg-primary">
        <div class="container clearfix">
            <h2 class="title-page">Admin</h2>
        
            <nav class="float-left">
            <ol class="breadcrumb text-white">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
            </ol>  
            </nav>
        </div> <!-- container //  -->
        </section>
        <!-- ========================= SECTION INTRO END// ========================= -->
        <!-- ========================= SECTION CONTENT ========================= -->
        <section class="section-content bg padding-y">
        <div class="container">
        
        <div class="row">
            <main class="col-sm-12">

                <div class="card">
                    <article class="card-body">
                    <h4 class="card-title mb-4 mt-1">Criar nova categoria</h4>
                    <form method="POST">
                            <div class="form-group">
                                <label>Categoria</label>
                                <% if(form !== null){ %>
                                    <input name="category" class="form-control" placeholder="categoria" type="text" value="<%=form.category%>">
                                <% }else{ %>
                                    <input name="category" class="form-control" placeholder="categoria" type="text">
                                <% } %>
                            </div> <!-- form-group// -->
                            <% if(errors !== null){ %> 
                                <% errors.errors.forEach(e=>{ %> 
                                    <% if(e.field === 'category'){ %>
                                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                            <%= e.description %>
                                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                    <% } %>
                                <% }) %> 
                            <% } %>
                            
                            <div class="form-group">
                                <label>Descrição</label>
                                <% if(form !== null){ %>
                                    <textarea name="description" class="form-control" placeholder="descrição"><%=form.description%></textarea>
                                <% }else{ %>
                                    <textarea name="description" class="form-control" placeholder="descrição"></textarea>
                                <% } %>
                            </div> <!-- form-group// -->
                            <% if(errors !== null){ %> 
                                <% errors.errors.forEach(e=>{ %> 
                                    <% if(e.field === 'description'){ %>
                                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                            <%= e.description %>
                                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                    <% } %>
                                <% }) %> 
                            <% } %>
                            

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block"> Salvar  </button>
                        </div> <!-- form-group// -->                                                           
                    </form>
                    </article>
                    </div> <!-- card.// -->
                    


            </main> <!-- col.// -->
        </div>
        
        </div> <!-- container .//  -->
        </section>
        <!-- ========================= SECTION CONTENT END// ========================= -->
        

<% include ../../footer %>        
